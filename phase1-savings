    "prep = timedf.index.values # List of all prep sites (in prepsite matrix)\n",
    "dist = [list(i) for i in list(timedf.values)] # Distance matrix as list of lists \n",
    "depot = 981 # Don't know where the warehouse is, using Evie Dennis as depot for now"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 5,
   "metadata": {},
